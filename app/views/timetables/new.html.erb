<div id="content-header">
  <%= image_tag("/images/show_timetable.png") %>
  <h1><%= t('timetable_text') %></h1>
  <h3><%= t('new_timetable') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png", :border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div class="box">
    <% if flash[:notice].present? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <% if @timetable.errors.any? %>
      <div id="errorExplanation" class="errorExplanation">
        <ul>
          <% @timetable.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <% form_for @timetable do |f| %>
      <div class="label-field-pair">
        <label for="start_date"><%= t('start_date') %></label>
        <div class="text-input-bg">
          <%= f.text_field :start_date, :id => 'start_date' %>
        </div>
      </div>

      <div class="label-field-pair">
        <label for="end_date"><%= t('end_date') %></label>
        <div class="text-input-bg">
          <%= f.text_field :end_date, :id => 'end_date' %>
        </div>
      </div>

      <%= submit_tag "â–º #{t('create_text')}", :class => "submit_button" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  jQuery(document).ready(function() {
    jQuery('#start_date, #end_date').datepicker({ dateFormat: "dd-mm-yy" });
  });
</script>